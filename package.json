{
  "name": "native-layout-stack",
  "version": "1.0.0-beta.5",
  "description": "SwiftUI like layout management",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepack": "npm run clean && npm run prettier && npm run lint && npm run build",
    "clean": "rimraf lib/*",
    "build": "tsc",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint --fix 'src/**/*.{tsx,ts}'",
    "prettier": "prettier --write 'src/**/*.{tsx,ts}'",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/native-ly/native-layout-stack.git"
  },
  "keywords": [
    "library",
    "react-native",
    "grid",
    "stack",
    "layout",
    "vertical",
    "horizontal",
    "spacer"
  ],
  "bugs": {
    "url": "https://github.com/native-ly/native-layout-stack/issues"
  },
  "homepage": "https://github.com/native-ly/native-layout-stack#readme",
  "dependencies": {
    "randomcolor": "^0.6.2",
    "react-safe-context-hooks": "^1.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^4.0.1",
    "@testing-library/react-native": "^7.2.0",
    "@types/jest": "^26.0.24",
    "@types/randomcolor": "^0.5.6",
    "@types/react": "^17.0.14",
    "@types/react-native": "^0.64.12",
    "@typescript-eslint/parser": "^4.28.4",
    "babel-jest": "^27.0.6",
    "cz-conventional-changelog": "^3.3.0",
    "cz-emoji": "^1.3.1",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-react-native": "^3.11.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "react": "^16.13.1",
    "react-native": "^0.62.1",
    "react-test-renderer": "^17.0.2",
    "semantic-release": "^17.4.4",
    "semantic-release-gitmoji": "^1.3.4",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.59.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
