{
  "name": "native-layout-stack",
  "version": "0.0.0-alpha.0",
  "description": "SwiftUI like layout management",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepack": "npm run clean && npm run prettier && npm run lint && npm run build",
    "clean": "rimraf lib/*",
    "build": "tsc",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint --fix 'src/**/*.{tsx,ts}'",
    "prettier": "prettier --write 'src/**/*.{tsx,ts}'",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/native-ly/native-layout-stack.git"
  },
  "keywords": [
    "horizontal",
    "vertical",
    "grid",
    "layout",
    "spacer",
    "react-native",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/native-ly/native-layout-stack/issues"
  },
  "homepage": "https://github.com/native-ly/native-layout-stack#readme",
  "devDependencies": {
    "@testing-library/jest-native": "^3.3.0",
    "@testing-library/react-native": "^7.0.2",
    "@types/jest": "^26.0.10",
    "@types/react": "^16.9.46",
    "@types/react-native": "^0.63.8",
    "@typescript-eslint/parser": "^3.9.1",
    "babel-jest": "^26.3.0",
    "cz-conventional-changelog": "^3.2.0",
    "cz-emoji": "^1.2.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-native": "^3.8.1",
    "husky": "^4.2.5",
    "jest": "^26.4.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-native": "^0.62.1",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^26.2.0",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.59.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
