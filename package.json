{
  "name": "native-layout-stack",
  "version": "1.0.0-beta.0",
  "description": "SwiftUI like layout management",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepack": "npm run clean && npm run prettier && npm run lint && npm run build",
    "clean": "rimraf lib/*",
    "build": "tsc",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint --fix 'src/**/*.{tsx,ts}'",
    "prettier": "prettier --write 'src/**/*.{tsx,ts}'",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/native-ly/native-layout-stack.git"
  },
  "keywords": [
    "horizontal",
    "vertical",
    "grid",
    "layout",
    "stack",
    "spacer",
    "react-native",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/native-ly/native-layout-stack/issues"
  },
  "homepage": "https://github.com/native-ly/native-layout-stack#readme",
  "dependencies": {
    "react-safe-context-hooks": "^1.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^3.4.3",
    "@testing-library/react-native": "^7.1.0",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "@types/react-native": "^0.63.45",
    "@typescript-eslint/parser": "^4.12.0",
    "babel-jest": "^26.6.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-emoji": "^1.3.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-native": "^3.10.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react": "^16.13.1",
    "react-native": "^0.62.1",
    "react-test-renderer": "^16.13.1",
    "semantic-release": "^17.3.1",
    "semantic-release-gitmoji": "^1.3.4",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.59.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
